{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tailwindCSS.includeLanguages": {
    "vue": "html",
    "vue-html": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["@apply\\s+([^;}]+)", "([^;}]+)"],
    ["classList\\.add\\(([^)]*)\\)", "([^)]*)"]
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  }
} 